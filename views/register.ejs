
<%- include('partials/head') %>
  <body class="register">
    <main>
      <section>
        <h1>Registreren</h1>
        <form method="POST" action="/registered">
          <section class="basic-info">
            <h3>Vul hier je basisgegevens in</h3>
            <ul>
              <li>
                <label for="email">Email-adres</label>
                <input
                  type="text"
                  name="email"
                  id="email"
                  placeholder="example@example.nl"
                  required
                />
              </li>
              <li>
                <label for="password">Wachtwoord</label>
                <input type="password" name="password" id="password" required />
              </li>
              <li>
                <label for="birthdate">Geboortedatum</label>
                <input type="date" name="birthdate" id="birthdate" required />
              </li>
              <li>
                <label for="man">man</label>
                <input type="radio" name="sex" id="man" value="man" required />
                <label for="vrouw">vrouw</label>
                <input
                  type="radio"
                  name="sex"
                  id="vrouw"
                  value="vrouw"
                  required
                />
              </li>
            </ul>
          </section>
          <button type="submit">Maak account aan</button>
        </form>
        <p class="berichtje">
          Al een account? <a class="linkje" href="/login">log in!</a>
        </p>
      </section>
    </main>
  </body>

