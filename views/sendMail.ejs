<%- include('partials/head') %>
<%- include('partials/nav') %>
<main class="sendMail">
   <section>
      <h1>Laat een suggestie achter</h1>
      <h3>Een leuk idee voor de app? Let us know!</h3>
      <form action="/mail" method="POST">
        <label for="">E-mail:</label>
        <input type="text" name="email" placeholder="Vul je e-mail in">

        <label for="">Onderwerp:</label>
        <input type="text" name="subject" placeholder="Vul het onderwerp">

        <label for="">Bericht:</label>
        <input type="text" name="message" placeholder="Wat wil je zeggen?">
        
        <button type="submit">Verstuur bericht</button>
      </form>
      <% messages.forEach(function (success) { %>
        <p><%= success %></p>       
    <% }) %>
  </section>
    </main>
  

